<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group pt-4">
          <%= f.label :email, User.human_attribute_name(:email), class: 'label-email' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group pt-4">
          <%= f.label :password, User.human_attribute_name(:password), class: 'label-password' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions pt-4">
          <%= f.submit t('defaults.login'), class: 'btn btn-header' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to t('.to_register_page'), new_user_path, class: 'link' %><br>
        <%= link_to t('.to_reset_password_page'), '#', class: 'link' %>
      </div>
    </div>
  </div>
</div>