<div class="col-sm-12 col-lg-4 mb-3">
  <div id="movierecord-id-<%= movierecord.id %>">
    <div class="card">
      <%= image_tag movierecord.image_url_url , class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
          <a href="#">
            <%= movierecord.title %>
          </a>
        </h4>
        <div class='mr10 float-right'>
        </div>
        <ul class="list-inline">
          <li class="list-inline-item">
          </li>
        <div>
        <p>総合評価：
        <span class="star-rating">
         <span class="star-rating-front" style="width: <%= getPercent(movierecord.star) %>%;">★★★★★</span>
         <span class="star-rating-back">★★★★★</span>
        </span> 
        </p> 
        </div>
        <ul class="list-inline">
          <li class="list-inline-item">
          </li>
          <li class="list-inline-item">
            <%= icon 'far', 'calendar' %>
            <%= l movierecord.created_at, format: :long %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>