<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render 'search_form', url: movierecords_path %>
    </div>
  </div>
  <%= link_to t('.making'), new_movierecord_path, class: 'nav-link custom-large-text' %>
  <!-- 記録一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @movierecords.present? %>
          <%= render @movierecords %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
        <%= link_to t('defaults.topback'), root_path, class: 'navbar-brand' %>
      </div>
    </div>
  </div>
</div>
