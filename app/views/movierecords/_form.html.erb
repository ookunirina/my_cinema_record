<%= form_with model: movierecord, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :image_url %>
      <%= f.file_field :image_url, class: 'form-control mb-3', accept: 'image/*' %>
      <%= f.hidden_field :image_cache %>
    </div>
    <div class="form-group">
      <%= f.label :genre %>
      <%= f.text_field :genre, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :review %>
      <%= f.text_area :review, class: 'form-control', rows: 10 %>
    </div>
    <%= f.submit t('defaults.movierecord'), class: 'btn btn-primary' %>
    <div>
    <%= link_to t('defaults.back'), movierecords_path, class: 'navbar-brand' %>
    </div>
  <% end %>