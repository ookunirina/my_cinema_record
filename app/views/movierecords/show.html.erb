<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <%= image_tag @movierecord.image_url.url, class: 'card-img-top img-fluid', size: '300x200' %>
            </div>
            <div class='col-md-9'>
              <h3 class="d-inline"><%= @movierecord.title %></h3>
              <p>ジャンル： <%= @movierecord.genre %></p>
              <div>
                <p>総合評価：
                  <span class="star-rating">
                    <span class="star-rating-front" style="width: <%= getPercent(@movierecord.star) %>%;">★★★★★</span>
                    <span class="star-rating-back">★★★★★</span>
                  </span>
                </p>
              </div>
              <div>
              <a>感想</a>
              <%= simple_format (@movierecord.review) %>
              </div>
              <% @movierecord.tags.each do |tag| %>
                <%= link_to tag.name, tag_movierecords_path(tag_id: tag.id), class: "badge rounded-pill bg-warning text-dark" %>
              <% end %>
              <ul class="list-inline">
                <li class="list-inline-item">by <%= @movierecord.user.name %></li>
                <li class="list-inline-item"><%= l @movierecord.created_at, format: :long  %></li>
              </ul>
                <% if current_user.own?(@movierecord) %>
                  <%= render 'twitter', movierecord: @movierecord  %>
                  <%= render 'crud_menus', movierecord: @movierecord %>
                <% else %>
                  <%= render 'like_button', movierecord: @movierecord %>
                <% end %>
            </div>
          </div>
        </div>
      </article>
      <div>
    <%= link_to t('defaults.mtback'), movierecords_path, class: 'navbar-brand' %>
    </div>
    </div>
  </div>