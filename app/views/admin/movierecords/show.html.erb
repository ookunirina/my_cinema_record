<% content_for(:title, @movierecord.title) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_movierecord_path(@movierecord), class: 'btn btn-success' %>
        <%= button_to t('defaults.delete'), admin_movierecord_path(@movierecord), id: "button-delete-#{@movierecord.id}", method: :delete, data: { turbo: false }, form: { onSubmit: "return check();" }, class: 'btn btn-danger' %>
        </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= Movierecord.human_attribute_name(:id) %></th>
          <td><%= @movierecord.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Movierecord.human_attribute_name(:title) %></th>
          <td><%= @movierecord.title %></td>
        </tr>
        <tr>
          <th scope="row"><%= Movierecord.human_attribute_name(:user) %></th>
          <td><%= @movierecord.user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Movierecord.human_attribute_name(:created_at) %></th>
          <td><%= l @movierecord.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<script>
  function check() {
    if (window.confirm('本当に削除しますか？')) { 
      return true;
    } else {
      window.alert('キャンセルされました'); 
      return false; 
    }
  }
</script>