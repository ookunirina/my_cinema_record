<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <h1 class="float-left mb-5 mt-3"><%= t('.title') %></h1>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success float-right mb-4' %>
      <table class="table">
        <tr>
          <td><%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '100x100' %></td>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:email)) %></th>
          <td><%= current_user.email %></td>
        </tr>
      </table>
      <!-- ここにユーザーのおすすめ映画と他ユーザーのオススメ映画表示予定 -->
      <!-- 各種リンク↓ -->
      <%= link_to "自分が観た映画の記録", "#" %>
      <%= link_to "観た映画の記録をする", new_movierecord_path, class: 'nav-link' %>
      <%= link_to "トップページに戻る", root_path, class: 'navbar-brand' %>
    </div>
  </div>
</div>